<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StickerMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#AFACAC">

            <ImageButton
                android:id="@+id/noneBtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:src="@drawable/none2"
                android:scaleType="fitEnd"
                android:padding="4dp"/>

            <ImageButton
                android:id="@+id/favBtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:src="@drawable/favorite"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:layout_toRightOf="@+id/noneBtn"
                android:padding="5.5dp"/>

            <ImageButton
                android:id="@+id/sListBtn"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/favBtn"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:src="@drawable/slist" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#8E8B8B">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </ScrollView>

        </LinearLayout>





    </LinearLayout>


</LinearLayout>